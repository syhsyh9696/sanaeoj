<h1>题目</h1>
<p>题目页面DA☆ZE!</p>
<% if user_signed_in? && current_user.admin? %>
<%= link_to  'New Problem', new_problem_path %>
<% end %>

<table>
<tbody>
  <tr>
    <th>#</th>
    <th>标题</th>
    <th>通过</th>
    <th>提交</th>
  </tr>
  <% @problems.each do |problem| %>
    <tr>
      <td><%= link_to  problem.id, problem_path(problem) %></td>
      <td><%= link_to  problem.title, problem_path(problem) %></td>
      <td>0</td>
      <td>0</td>
      <% if user_signed_in? && current_user.admin? %>
      <td><%= link_to  'Edit', edit_problem_path(problem) %></td>
      <td><%= link_to  'Delete', problem, confirm: "确定要删除吗?", method: :delete %></td>
      <% end %>
    </tr>
  <% end %>
</tbody>
</table>